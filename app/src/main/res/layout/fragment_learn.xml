<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="28dp"
    tools:context=".LearnFragment">

    <TextView
        android:id="@+id/tv_wear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quiz Time"
        android:textSize="16sp"
        android:fontFamily="@font/lexend_bold"
        android:layout_marginTop="28dp"
        android:textColor="@color/primary_color"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/tv_wear"
        app:layout_constraintBottom_toBottomOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/primary_color"
            app:cardCornerRadius="10dp">

            <TextView
                android:id="@+id/tv_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="manakah"
                android:textSize="22sp"
                android:layout_marginVertical="42dp"
                android:layout_marginHorizontal="28dp"
                android:fontFamily="@font/lexend_bold"
                android:layout_marginTop="28dp"
                android:textColor="@color/white"
                />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_answer_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/primary_color"
                app:strokeWidth="2dp"
                android:layout_marginTop="108dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/tv_answer_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="answer 1"
                    android:textSize="13sp"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="28dp"
                    android:fontFamily="@font/lexend_semibold"
                    android:layout_marginTop="28dp"
                    android:textColor="@color/primary_color"
                    />

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_answer_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/primary_color"
                app:strokeWidth="2dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/tv_answer_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="answer 1"
                    android:textSize="13sp"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="28dp"
                    android:fontFamily="@font/lexend_semibold"
                    android:layout_marginTop="28dp"
                    android:textColor="@color/primary_color"
                    />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_answer_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/primary_color"
                app:strokeWidth="2dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/tv_answer_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="answer 1"
                    android:textSize="13sp"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="28dp"
                    android:fontFamily="@font/lexend_semibold"
                    android:layout_marginTop="28dp"
                    android:textColor="@color/primary_color"
                    />

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_answer_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/primary_color"
                app:strokeWidth="2dp"
                android:layout_marginTop="12dp"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/tv_answer_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="answer 1"
                    android:textSize="13sp"
                    android:layout_marginVertical="16dp"
                    android:layout_marginHorizontal="28dp"
                    android:fontFamily="@font/lexend_semibold"
                    android:layout_marginTop="28dp"
                    android:textColor="@color/primary_color"
                    />

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>